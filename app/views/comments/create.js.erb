$("#comment_line").after($("\
<div class='card mb-2'>\
  <% c = @comment %>\
  <div class='card-body p-0' id='comment_<%= c.id %>'>\
    <div class='card-body'>\
      <%= j image_tag(get_gravatar_url(c.user.email), size: 30) %>\
      <%= j c.user.name %>\
      <%= j simple_format(c.body) %>\
      <%= j link_to 'Edit', edit_comment_path(c) , class: 'btn btn-primary' %>\
      <%= j link_to 'Delete', comment_path(c) , method: :delete, class: 'btn btn-danger', remote: true %>\
    </div>\
  </div>\
</div>\
"));
$("#new_comment_form").val('');
