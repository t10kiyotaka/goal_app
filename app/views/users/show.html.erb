<h1>Users#show</h1>

<div class="row">
  <div class="col-md-8">
    <h3>My Goals</h3>
        <% @user.goals.each do |g| %>
          <ul>
            <li>
              <%= g.description %> |
              goal_id: <%= g.id %> |
              <%= link_to "Delete", user_goal_path(@user, g), method: :delete, data: { confirm: "You sure?" } %>
            </li>
          </ul>
        <% end %>
  </div>

  <div class="col-md-4">
    <h3>Add new goals</h3>
    <%= render 'goals/new' %>
  </div>

</div>
