
<% if Like.where(goal_id: g.id, user_id: current_user&.id).present? %>
  <%= link_to like_path(g), method: :delete do %>
    <i class="fas fa-thumbs-up"></i>
  <% end %>
<% else %>
  <%= link_to goal_likes_path(g), method: :post do %>
    <i class="fas fa-thumbs-up" style="color:gray;"></i>
  <% end %>
<% end %>
<%= pluralize(g.likes.count, "like") %>
